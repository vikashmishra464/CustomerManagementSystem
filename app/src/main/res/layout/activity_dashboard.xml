<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9e80"
    android:paddingTop="10dp"
    tools:context=".DashboardActivity">


    <LinearLayout
        android:paddingTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CRM Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- View Customers -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_customers"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_bg"
                android:text="📋 View Customers"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Add Customer -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_add_customer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="➕ Add Customer"
                android:background="@drawable/button_bg"
                android:textSize="18sp"
                android:textColor="#000"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Leads -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_leads"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="📌 Complains"
                android:textSize="18sp"
                android:background="@drawable/button_bg"
                android:textColor="#000"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Reports -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_reports"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="📊 FeedBacks"
                android:textSize="18sp"
                android:textColor="#000"
                android:background="@drawable/button_bg"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Settings -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_settings"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="⚙️ Settings"
                android:textSize="18sp"
                android:textColor="#000"
                android:background="@drawable/button_bg"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <!-- Logout -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_logout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="32dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="#FFCDD2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="🚪 Logout"
                android:textSize="18sp"
                android:textColor="#B00020"
                android:background="@drawable/button_bg"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>